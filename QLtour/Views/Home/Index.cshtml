@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using QLtour.Models
@model List<DIEMTHAMQUAN>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <div class="row text-center">
        <h2 style="text-align:center" class="mt-3 mb-3">DANH SÁCH ĐIỂM THAM QUAN</h2>
    </div>
    <div class="row">
        @foreach (var s in Model)
        {
            <div class="col-4">
                <div class="card h-75">
                    <img class="card-img-top w-100" src="/HinhAnhDD/@s.HinhAnh" />
                </div>
                <div class="card-body">
                    <p class="card-title">@s.TenDiaDanh</p>
                    <a href="/Home/XemChiTiet_DiaDanh/@s.MaDiaDanh"> Xem Chi Tiết </a>
                    <a href="/Home/ChonMua/@s.MaDiaDanh"> Chọn mua </a>
                </div>
            </div>
        }
    </div>
</div>
